{
  "version": "0.0.0",
  "private": true,
  "name": "angular-commentium",
  "description": "A comment list editor in AngularJS",
  "repository": "https://github.com/dphochman/angular-commentium",
  "license": "MIT",
  "devDependencies": {
    "bower": "^1.3.1",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-zip": "^3.2.0",
    "http-server": "^0.6.1",
    "karma": "^0.12.16",
    "karma-chrome-launcher": "^0.1.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jasmine": "~0.1.0",
    "protractor": "^2.1.0",
    "shelljs": "^0.2.6",
    "tmp": "0.0.23"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server -a 0.0.0.0 -p 8000",

    "update-app-version": "node -e \"var fs=require('fs'),packageJson=require('./package.json'),viewFile='app/index.html',destFile=viewFile,viewText=fs.readFileSync(viewFile,'utf-8');viewText=viewText.replace(/(<span app-version>)(.*?)(<\\/span>)/,'$1'+packageJson.version+'$3');fs.writeFileSync(destFile,viewText);\"",
    "prebuild": "npm run update-app-version",
    "build": "gulp build",
    "start-built-server": "http-server -a 0.0.0.0 -p 8001 -c-1 ./build/app",

    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.conf.js",
    "test-single-run": "node node_modules/karma/bin/karma start test/karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js",

    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
